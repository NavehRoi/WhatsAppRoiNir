{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Creates an EC2 instance and a DynamoDB table with port 3000 enabled and runs user data script",
  "Resources": {
    "MyEC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "InstanceType": "t2.micro",
        "ImageId": "ami-04fe22dfadec6f0b6",
        "SecurityGroups": [
          {
            "Ref": "InstanceSecurityGroup"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n",
                "sudo yum update -y\n",
                "sudo yum install -y git\n",
                "curl -sL https://rpm.nodesource.com/setup_16.x | sudo bash -\n",
                "sudo yum install -y nodejs\n",
                "sudo npm install -g pm2\n",
                "git clone https://github.com/NavehRoi/WhatsAppRoiNir.git\n",
                "cd WhatsAppRoiNir\n",
                "npm install\n",
                "node server.js\n",
                "echo \"Deployment completed successfully. Application is running on port 3000.\"\n"
              ]
            ]
          }
        }
      }
    },
    "InstanceSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Enable port 3000 for Node.js app",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 3000,
            "ToPort": 3000,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "UsersTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "Users",
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 1,
          "WriteCapacityUnits": 1
        }
      }
    },
    "GroupsTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "Groups",
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 1,
          "WriteCapacityUnits": 1
        }
      }
    }
  },
  "Outputs": {
    "EC2InstancePublicIPv4": {
      "Description": "Public IPv4 address of the EC2 instance",
      "Value": {
        "Fn::GetAtt": ["MyEC2Instance", "PublicIp"]
      }
    },
    "EC2InstanceURL": {
      "Description": "URL to access the application on EC2",
      "Value": {
        "Fn::Join": [
          "",
          [
            "http://",
            {
              "Fn::GetAtt": ["MyEC2Instance", "PublicDnsName"]
            },
            ":3000"
          ]
        ]
      }
    }
  }
}
